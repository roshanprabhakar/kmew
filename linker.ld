ENTRY(_start)

SECTIONS {
	. = 0x80000;
	__start = .;

	__test_start = .;
	.text :
	{
		KEEP(*(.text.boot))	
		*(.text)
	}
	. = ALIGN(4096); /* PI page size */
	__text_end = .;

	__rodata_start = .;
	.rodata :
	{
		*(.rodata)
	}
	. = ALIGN(4096);
	__rodata_end = .;

	__data_start = .;
	.data : 
	{
		*(.data)
	}
	. = ALIGN(4096);
	__data_end = .;

	__bss_start = .;
	.bss : 
	{
		bss = .;
		*(.bss)
	}
	. = ALIGN(4096);
	__bss_end = .;

	__bss_size = __bss_end - __bss_start;
	__end = .;
}

